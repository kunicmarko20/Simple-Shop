{% extends 'base.html.twig' %}
{% block title %}Subscription{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-sm-12"><h2 class="pricing-header text-center uppercase">You'll Look Amazing</h2></div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="price-square">
                <p class="pricing-length-header monthly text-center">Mini Pack</p>
                <div class="pricing-info-padding">
                    <p class="price text-center">$99</p>
                    <p class="text-center">A fresh set of few random products monthly</p>
                </div>
                <a href="{{ path('order_add_subscription_to_cart', {
                    'planId': 'mini_pack_monthly'
                }) }}" class="btn btn-warning center-block price-btn">
                    Go Mini!
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="price-square price-square-yearly">
                <p class="pricing-length-header yearly text-center">Mega Pack</p>
                <div class="pricing-info-padding">
                    <p class="price text-center">$199</p>
                    <p class="text-center">The perks of a Mini Pack membership, but with a few additional things each month!</p>
                </div>
                <a href="{{ path('order_add_subscription_to_cart', {
                    'planId': 'mega_pack_monthly'
                }) }}" class="btn btn-warning center-block price-btn">
                    Go Mega!
                </a>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="price-square">
                <p class="pricing-length-header monthly text-center">Mini Pack yearly</p>
                <div class="pricing-info-padding">
                    <p class="price text-center">$990</p>
                    <p class="text-center">A fresh set of few random products monthly for an entire year.</p>
                </div>
                <a href="{{ path('order_add_subscription_to_cart', {
                    'planId': 'mini_pack_yearly'
                }) }}" class="btn btn-warning center-block price-btn">
                    Go Mini yearly!
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="price-square price-square-yearly">
                <p class="pricing-length-header yearly text-center">Mega Pack yearly</p>
                <div class="pricing-info-padding">
                    <p class="price text-center">$1990</p>
                    <p class="text-center">The perks of a Mini Pack membership, but with a few additional things each month for next 12 months !??!?!?</p>
                </div>
                <a href="{{ path('order_add_subscription_to_cart', {
                    'planId': 'mega_pack_yearly'
                }) }}" class="btn btn-warning center-block price-btn">
                    Go Mega yearly!
                </a>
            </div>
        </div>

    </div>





</div>

{% endblock %}
